{
  "name": "graphwind",
  "version": "0.0.1",
  "repository": "github:xieyuheng/graphwind",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "test:ts": "vitest --dir src --threads false --run",
    "test:watch": "vitest --dir src --threads false",
    "test:coverage": "vitest --dir src --threads false --run --coverage ",
    "test:gui": "vitest --dir src --threads false --ui",
    "test": "npm run test:ts",
    "format": "prettier src docs --write"
  },
  "devDependencies": {
    "@types/node": "^20.5.1",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-istanbul": "^0.34.2",
    "@vitest/ui": "^0.34.2",
    "@xieyuheng/test-runner": "^0.2.9",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.2"
  },
  "dependencies": {
    "tailwindcss": "^3.3.3"
  },
  "license": "GPL-3.0-or-later"
}
